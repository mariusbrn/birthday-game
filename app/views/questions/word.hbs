
<div class="row">
	<div class="col s12 m12">
	  <div class="card blue-grey darken-1">
	    <div class="card-content white-text">
        <p><em>{{ question.sentence }}</em></p>
	      <span class="card-title">{{ question.question }}</span>
        <form id="answerForm">
          <input type="hidden" name="_csrf" value="{{csrf_token}}">
          {{#if question.img}}
          <div class="row center-align">
            <img class="responsive-img" src="/img/{{ question.img }}">
          </div>
          {{/if}}
          <p class="center-align hint">Indice&nbsp;: <span>{{question.hint}}</span>
          </p>
          <div class="row">
            <div class="input-field col s12 m12">
              <input id="answerInput" type="text" name="answer" class="validate">
              <label for="answerInput">Réponse</label>
              <div class="answerError">mauvaise réponse</div>
            </div>
            <div class="col s12 m12">
              <button class="btn btn-large btn-block waves-effect waves-light col s12 m12" type="submit" name="action">Ok</button>
            </div>
          </div>
        </form>
    	</div>
	  </div>
	</div>
</div>

